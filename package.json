{
  "name": "sls-digital-edition-frontend",
  "description": "An Angular app for digital editions",
  "homepage": "https://github.com/slsfi/digital_edition_web_ng",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --configuration=development,sv",
    "start:fi": "ng serve --configuration=development,fi",
    "extract-i18n": "ng extract-i18n --sort idAsc",
    "generate-sitemap": "node ./generate_sitemap.js",
    "build:ssr": "ng build --configuration production && ng run app:server:production && copyfiles proxy-server.js dist/app",
    "serve:ssr": "node dist/app/proxy-server.js",
    "ssr-start": "npm run build:ssr && npm run serve:ssr"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.12",
