    "@angular/platform-browser-dynamic": "^16.2.12",
    "@angular/platform-server": "^16.2.12",
    "@angular/router": "^16.2.12",
    "@ionic/angular": "^7.5.8-nightly.20231201",
    "@ionic/angular-server": "^7.5.8-nightly.20231201",
    "@jsonurl/jsonurl": "^1.1.7",
    "@nguniversal/express-engine": "^16.2.0",
    "epubjs": "~0.3.93",
    "express": "^4.18.2",
    "htmlparser2": "^9.0.0",
    "ionicons": "^7.2.1",
    "marked": "^4.3.0",
    "npm": "^9.9.2",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.2",
    "xliff": "^6.2.0",
    "zone.js": "~0.13.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.10",
